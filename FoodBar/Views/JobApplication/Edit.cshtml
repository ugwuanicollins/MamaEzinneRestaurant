@model Core.Models.JobApplication

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container col d-flex justify-content-center" style="margin-top: 200px; align-items: center;justify-content: center; width: 950px;">
    <div class="card vh-40  text-center align-center " style="width:950px;border:2px solid black;background-color:lightgray">
        <div class="card-body text-center align-center gy-3 vh-50">
            <span>@ViewBag.Message </span>
            <section class="signUp">
                <form method="post" asp-action="Edit" asp-controller="JobApplication">
                    @if (TempData["Message"] != null)
                    {

                        var tempDatamessage = (FoodBar.Models.Message)TempData["Message"];
                        <partial name="_Message" model="tempDatamessage" />
                    }
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="text" asp-for="Id" hidden class="form-control" />
                    <h2 class="mb-4  w-100 text-center text-danger " style="font-weight: bold;font-family: monserrat;font-size: 30px;margin-right:70px">Fill In The Field</h2>
                    <div class="form-group mb-5 mt-2 row " style="display:flex;margin-right:60px">
                        <label for="Name" style="font-family:monserrat;font-weight:bold;font-size:20px" class="col-sm-2 col-form-label text-dark">Name</label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="Name" class="form-control" id="Name" placeholder="Enter Name">
                            <span asp-Validation-for="Name" class="field-validation-error text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mb-5 row " style="display:flex;margin-right:60px">
                        <label style="font-family:monserrat;font-weight:bold;font-size:20px" for="Number" class="col-sm-2 col-form-label text-bold text-dark">Phone</label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="PhoneNumber" class="form-control" id="Number" placeholder="Enter Number">
                            <span asp-Validation-for="PhoneNumber" class="field-validation-error text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-1  mt-2">
                        <input type="submit" value="Submit" class="btn btn-danger text-bold" style="border-radius:90px;background-color: red; height: 3em; width: 50%; color: whitesmoke;margin-left:40px" />
                    </div>
                </form>

            </section>
        </div>
    </div>
</div>

