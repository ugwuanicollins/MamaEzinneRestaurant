@model IEnumerable<Core.Models.JobApplication>

<style>

    body {
        counter-reset: Serial; /* / Set the Serial counter to 0 /*/
    }

    tr td:first-child:before {
        counter-increment: Serial; /* / Increment the Serial counter /*/
        content: counter(Serial); /*  / Display the counter /*/
    }
</style>


<div class="container p-3" style="margin-top:130px">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-danger">JobApplication</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Index" asp-controller="Chef" class="btn btn-danger">
                <i class="bi bi-plus">AddJobDetails</i>
           </a>
        </div>
    </div>


    <br /><br />
    
    <div class="container table-responsive" style="margin-top:100px">
       @if(Model.Count() > 0)
        {
            <table class="table table-bordered table-striped table-condensed table-hover">
                <thead class="bg-danger text-white">
                    <tr>
                        <th>S/N</th>
                        <th>Chef Name</th>
                        <th>Available</th>
                        <th>CreatedBy</th>
                        <th>DateCreated</th>
                        <th>Action</th>
                    </tr>
                </thead>

            <tbody>
                    @foreach(var job in Model)
                    {
                        <tr class="table-secondary">
                            <td></td>
                            <td>@job.Name</td>
                            <td>Available</td>
                            <td>@job.Email</td>
                            <td>@job.DateCreated.ToString("D")</td>
                            <td class="text-right">
                               @* <div class="dropdown dropdown-active">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">Category</i></a>
                                    <div class="dropdown-menu dropdown-menu-right aria-labelledby=" dropdownMenuButton"">*@
                                        <a class="dropdown-item" asp-controller="JobApplication" asp-route-Id="@job.Id" asp-action="Edit" style="color:blue"> Edit</a>
                                        <a class="dropdown-item" asp-controller="JobApplication" asp-route-Id="@job.Id" asp-action="Delete" style="color:red;"> Delete</a>
                               @*     </div>
                                </div>*@
                            </td>
                        </tr>
                    }
                
            </tbody>
            </table>
       }
        else
        {
            <p>No Job Exits</p>
        }

            </div>
    </div>

 <script href="text/javascript">
    $(function () {
        $(".dropdown-menu").on('click', 'a', function () {
            $(this).parents('.dropdown').find('a').text($(this).text());
        });
    });

    $('#myModal').modal(options)
</script>