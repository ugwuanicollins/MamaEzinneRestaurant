@model Core.Models.WorkDetails

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container col d-flex justify-content-center" style="margin-top: 180px; align-items: center;justify-content: center; width: 950px;">
    <div class="card vh-40  text-center align-center " style="width:950px;border:2px solid black;background-color:lightgray">
        <div class="card-body text-center align-center gy-3 vh-50">
            <section class="signUp">
                <form method="post" asp-action="DeletePost" asp-controller="Chef">
                    @if (TempData["Message"] != null)
                    {

                        var tempDatamessage = (FoodBar.Models.Message)TempData["Message"];
                        <partial name="_Message" model="tempDatamessage" />
                    }
                    <input asp-for="Id" hidden />
                    <h2 class="mb-4  w-100 text-center text-danger " style="font-weight: bold;font-family: monserrat;font-size: 30px;margin-right:70px">Fill In The Field</h2>
                    <div class="form-group mb-5 row " style="display:flex;margin-right:60px">
                        <label for="Name" class="col-sm-2 col-form-label text-bold text-dark">Name</label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="Name" disabled class="form-control" id="Name" placeholder="Enter Name">
                        </div>
                    </div><div class="form-group mb-5 row " style="display:flex;margin-right:60px">
                        <label for="Salary" class="col-sm-2 col-form-label text-bold text-dark">Salary</label>
                        <div class="col-sm-10">
                            <input type="text" asp-for="Salary" disabled class="form-control" id="Name" placeholder="Enter Amount">
                        </div>
                    </div>
                    <div class="mb-1  mt-2">
                        <input type="submit" value="Delete" class="btn btn-danger text-bold" style="border-radius:90px;background-color: red; height: 3em; width: 50%; color: whitesmoke;margin-left:40px" />
                    </div>
                </form>


            </section>
        </div>
    </div>
</div>

