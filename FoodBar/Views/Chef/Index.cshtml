@model IEnumerable<Core.Models.WorkDetails>

<style>

    body {
        counter-reset: Serial; /* / Set the Serial counter to 0 /*/
    }

    tr td:first-child:before {
        counter-increment: Serial; /* / Increment the Serial counter /*/
        content: counter(Serial); /*  / Display the counter /*/
    }
</style>


<div class="container p-3" style="margin-top:140px">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-center">WorkersDetails</h2>
        </div>
    </div>



    <br /><br />


<div class="container table-responsive" style="margin-top:100px">
        @if(Model.Count() > 0)
        {
            <table class="table table-bordered table-striped table-condensed table-hover" width="100%">
                <thead class="bg-danger text-white">
                    <tr>
                        <th>S/N</th>
                        <th>WorkName</th>
                        <th>Salary</th>
                        <th>DateCreated</th>
                        <th class="text-center">Available Chef</th>
                        <th class="text-right no-sort">Action</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach(var work in Model)
                    {
                        <tr class="table-secondary">
                            <td></td>
                            <td width="20%">@work.Name</td>
                            <td>@work.Salary</td>
                            <td width="20%">@work.DateCreated.ToString("D")</td>
                            <td width="30%">
                                <button type="button" class="btn btn-primary btn-block btn-lg align-items-center text-center" style="margin-left:120px;width:30%" data-toggle="modal" data-target="#myModal">
                                    View
                                </button>

                                <!-- The Modal -->
                                <div class="modal fade bd-example-modal-lg " tabindex="-1" id="myModal" style="background-color:whitesmoke">
                                    <div class="modal-dialog modal-lg" style="margin-top:150px">
                                        <div class="modal-content">

                                            <!-- Modal Header -->
                                            <div class="modal-header">
                                                <h3 class="modal-title w-100 text-center text-danger">Available Chefs</h3>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            </div>

                                            <!-- Modal body -->
                                            <div class="modal-body container table-responsive">
                                                <table class="table table-striped table-condensed table-bordered table-hover " width="100%">
                                                    <thead class="bg-danger text-white">
                                                        <tr>
                                                            <th>S/N</th>
                                                            <th style="width:200px">Name of Chef</th>
                                                            <th>Email</th>
                                                            <th>PhoneNumber</th>
                                                            <th>DateCreated</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr class="table-secondary">
                                                            <td></td>
                                                            <td></td>
                                                            <td></td>
                                                            <td></td>
                                                            <td></td>
                                                            <td class="text-right">
                                                                <div class="dropdown dropdown-active">
                                                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">Category</i></a>
                                                                    <div class="dropdown-menu dropdown-menu-right aria-labelledby=" dropdownMenuButton"">
                                                                        <a class="dropdown-item" data-toggle="modal" style="color:blue"> Edit</a>
                                                                        <a class="dropdown-item" data-toggle="modal" style="color:red;"> Delete</a>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </tr>

                                                    </tbody>
                                                </table>
                                            </div>
                                            <!-- Modal footer -->
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-danger align-items-center text-center" style="border-radius:90px;margin-left:70px;" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-right">
                               @* <div class="dropdown dropdown-active">
                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">Category</i></a>*@
                                    @*<div class="dropdown-menu dropdown-menu-right aria-labelledby=" dropdownMenuButton"">*@
                                        <a class="dropdown-item" asp-controller="JobApplication" asp-route-Id="@work.Id" asp-action="Create" style="color:blue"> Apply</a>
                                        <a class="dropdown-item" asp-controller="Chef" asp-route-Id="@work.Id" asp-action="Edit" style="color:blue"> Edit</a>
                                        <a class="dropdown-item"  asp-controller="Chef" asp-route-Id="@work.Id" asp-action="Delete" style="color:red;"> Delete</a>
                                   @* </div>*@
                                @*</div>*@
                            </td>
                        </tr>
                    }
                  

                </tbody>
            </table>
        }
        else
        {
            <p>No work Exits</p>
        }
    </div>
</div>
