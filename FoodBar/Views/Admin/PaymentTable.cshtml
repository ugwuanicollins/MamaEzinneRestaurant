@model IEnumerable<Core.Models.Payment>

@{
    ViewData["Title"] = "PaymentTable";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="jumbotron-fluid p-3" style="margin-top:100px">
    <div class="row pt-4">
        <div class="col-6 mt-3">
            <h2 class="text-danger text-center">Payment Record</h2>
        </div>
    </div>

    <br />

    <div class="container table-responsive" style="margin-top:30px">
        <div class="row">
            <div class="col-12">
                @if (Model.Count() > 0)
                {
                    <table id="itemTable" class="table table-bordered table-striped  table-condensed table-hover" width="200%">
                        <thead class="bg-danger text-white">
                            <tr>
                                <th class="text-center" scope="col">UserName</th>
                                <th class="text-center" scope="col">Amount</th>
                                <th class="text-center" scope="col">status</th>
                                <th class="text-center" scope="col">ReferenceNumber</th>
                                <th class="text-center" scope="col">DatePaid</th>
                                <th class="text-center" scope="col">Evidence</th>
                                <th class="text-center" scope="col">Details</th>
                                <th class="text-center" scope="col">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var payment in Model)
                            {

                                <tr class="table-secondary mt-4" >
                                    <td >@payment.User.Email</td>
                                    <td  class="text-center">@payment.Amount</td>
                                    <td class="text-bold mt-2 align-items-center">@payment.status</td>
                                    <td class="text-center">@payment.ReferenceNumber</td>
                                    <td >@payment.DatePaid.ToString("D")</td>
                                    <td ><img alt=""  style="width:150px;height:64px" src="@payment.Evidences" /></td>
                                    <td><button class="btn btn-danger text-white mt-2 align-items-center text-center btn-sm details-btn" onclick="viewPayment('@payment.Id')">View</button></td>
                                    <td class="text-center mt-2" role="group">
                                        <a onclick="ApproveCustomerPayment('@payment.UserId','@payment.OrderId')" class="btn btn-success">Approve</a>
                                        <a onclick="DeclineCustomerPayment('@payment.UserId','@payment.OrderId')" class="btn btn-danger">Decline</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                   }
                else
                {
                    <p>No Payment Exits</p>
                }

            </div>
            <div id="itemModal" class="modal fade" role="dialog">
                <div class="modal-dialog modal-dialog-centered modal-lg modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header bg-danger">
                            <h4 class="modal-title align-items-center  text-bold text-white" style=" margin-left:230px;font-size:30px">Payment Details</h4>
                        </div>
                        <div class="modal-body" style="font-family:monserrat;font-size:25px;">
                            <div class="row">
                            <div class="text-center align-items-center container-fluid">
                              <img style="height:400px;width:250%" src="" id="imageid" class="img-fluid">
                            </div>
                            <div class="col-8">
                                <p id="usernam"><strong style="font-family:monserrat;font-size:25px;font-weight:bold" class="mt-2">UserName: </strong> <span></span></p>
                                <p id="modal-item-Amount"><strong style="font-family:monserrat;font-size:25px;font-weight:bold" class="mt-2">Amount: </strong> <span></span></p>
                                <p id="modal-item-ReferenceNumber" style="font-family:monserrat;font-size:25px;font-weight:bold" class="mt-2"><strong>ReferenceNumber: </strong> <span></span></p>
                                <p id="modal-item-DatePaid"><strong style="font-family:monserrat;font-size:25px;font-weight:bold" class="mt-2">DatePaid: </strong> <span></span></p>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .modal {
        display: none;
        position: fixed;
        left: 0;
        top: 0;
        max-width: 200%;
        min-height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-backdrop {
        z-index: 1040 !important; /* Set the desired z-index value */
        background-color: rgba(0, 0, 0, 0.5) !important; /* Set the desired background color */
    }
    
</style>
