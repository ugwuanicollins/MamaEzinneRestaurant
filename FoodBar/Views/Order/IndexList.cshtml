@model IEnumerable<Core.Models.Payment>
@{
    ViewData["Title"] = "IndexList";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}



<div  class="container p-3" style="margin-top:100px">
    <div class="row pt-4">
        <div class="col-7">
            <h2 class="text-danger text-bold">OrderDetails</h2>
        </div>
    </div>

    <div class="container table-responsive" style="margin-top:10px">
        <div class="row">
            <div class="col-12" width="200%">
                @if (Model.Count() > 0 && Model != null)
                {
                    <table id="itemTable" class="table table-bordered table-striped  table-condensed table-hover">
                        <thead class="bg-danger text-white">
                            <tr>
                                <th class="text-center" scope="col">S/N</th>
                                <th class="text-center" scope="col">DateOrdered</th>
                                <th class="text-center" scope="col">RefNumber</th>
                                <th class="text-center" scope="col">OrderStatus</th>
                                <th class="text-center" scope="col">ViewOrder</th>
                            </tr>
                        </thead>

                        <tbody class="bg-muted">
                            @foreach (var item in Model)
                            {

                                <tr class="text-dark text-center">
                                    <td></td>
                                    <td id="foodId">@item.DatePaid</td>
                                    <td id="amount">@item?.Orders?.ReferenceNumber</td>
                                    <td id="referenceNumber">@item?.status</td>
                                    <td id="datecreated"><a class="btn w-50 btn-primary text-white" onclick="GetOrderPartialView(@item?.Id)">Orders</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No Order Exits</p>
                }

               </div>
          </div>
      </div>
    <div class="modal" id="preview_Modal">
        <div class="modal-dialog modal-xl modal-dialog-centered vh-30">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h2 class="mt-3 text-center">OrderDetails</h2>
                    <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body" id="preview">
                </div>
            </div>
        </div>
    </div>
</div>




<style>
    table {
        counter-reset: row-counter;
    }

    tr > td:first-child:before {
        counter-increment: row-counter;
        content: counter(row-counter);
    }

</style>

<script>
    function GetOrderPartialView(id) {
        $.ajax({
            type: 'GET',
            url: '/Order/PreviewOrder/'+ id, 
            data: {},
            success: function (data) {
                $("#preview").html(data);

                $("#preview_Modal").modal('show');
            }
        });
    };
</script>

