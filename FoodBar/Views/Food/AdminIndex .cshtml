@model IEnumerable<Core.Models.Food>



<div class="container p-3" style="margin-top:100px">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-danger">Our Food Menu</h2>
        </div>
    </div>

    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <div class="text-center jumbotron-fluid">
            <h4 class="mt-4 mb-5" style="font-size:30px;font-family:'Times New Roman';"><strong>Our Receipts</strong></h4>

            <div class="row gy-2">
                @foreach (var food in Model)
                {
                    <div class="col-4 card">
                        <h5 class="card-title mt-2 mb-3">@food.Name</h5>

                        <div class="card-body">
                            <img src="@food.Image" alt="" style="width:100%; height:150px;">

                            <p class="mb-2 mt-3 card-text"><i style="color:yellow" class="bi bi-star-fill"></i><i style="color:yellow" class="bi bi-star-fill"></i><i style="color:yellow" class="bi bi-star-fill"></i>@food.Description</p>
                            <h3 class="mb-3 point">$@food.Price</h3>
                            <div>
                                <a data-toggle="modal" data-target="#modals" class="btn btn-lg btn-danger" onclick="GetFood(@food.Id)" style="width:50%;margin-left:10px;border-radius:90px;height:50px">Buy</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    }
    else
    {
        <p>No Food Exits</p>
    }
</div>



<!-- The Modal -->
<div class="modal fade mt-1" id="modals">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <!-- Modal Header -->
            @*            <div class="modal-header">
            <h4 class="modal-title">Modal Heading</h4>

            </div>*@

            <!-- Modal body -->
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title mb-3 text-center mb-3" style="font-size:50px;font-family:monserrt;color:red">Order Now</h3>

                <div class="row">
                    <input id="foodId" class="form-control" hidden />
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>AccountName</label>
                            <input type="text" class="form-control" id="accountNameId" disabled>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">FoodName</label>
                            <input type="text" id="foodName" class="form-control" required>

                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-group">
                            <label>AccountNumber</label>
                            <input type="number" id="accountNumberId" class="form-control" disabled>
                        </div>
                    </div>



                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Amount</label>
                            <input type="number" id="amount" class="form-control" required>
                        </div>
                    </div>


                     <div class="col-md-6">
                        <div class="form-group">
                            <label>Bank Name</label>
                            <input type="text" class="form-control" id="bankNameId" disabled>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Quantity</label>
                            <input type="number" class="form-control" id="quantity" onkeyup="Quantity()" required>
                        </div>
                    </div>

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <a onclick="GetFoodById()" class="btn btn-lg btn-primary" style="margin-right:280px">Confirm Payment</a>
                </div>

            </div>


        </div>
    </div>
</div>


<!-- The Modal -->
<div class="modal" id="evidenceModal">
    <div class="modal-dialog p-3 mt-5" style="max-width:45%">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header p-3 bg-danger">
                <h4 class="modal-title align-items-center  text-bold text-white" style="margin-left:150px"> Upload Evidence of Payment</h4>
                <button type="button" class="close text-dark" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="modal-body">
                    <div class="form-group">
                        <input class="form-control "  id="evidenceId" type="file" />
                        <a class="btn btn-lg btn-info mt-4" style="margin-left:270px" onclick="GetUploadedEvidence()">Submit</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            margin: auto;
            text-align: center;
            font-family: arial;
            border: 2px black solid;
            margin-top: 20px;
        }

        .card-title {
            color: black;
            font-size: 35px;
        }

        .point {
            color: black;
            font-size: 25px;
        }

    </style>


