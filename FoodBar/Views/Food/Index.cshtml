@model IEnumerable<Core.Models.Food>


<div class="container-fluid" style="margin-top:100px">
    <div class="row">
        <div class="col-6">
            <h2 class="text-danger mt-2">Our Food Menu</h2>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <div class="text-center container-fluid">
            <h2 class="mt-2 mb-3" style="font-size:35px;font-family:'Times New Roman';"><strong>Available Foods</strong></h2>

            <div class="row gy-2">
                @foreach (var food in Model)
                {
                    <div class="col-4 card">
                        <div class="d-flex justify-content-center text-warning mt-1">
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                            <div class="bi-star-fill"></div>
                        </div>
                        <div class="card-body">
                            <img src="@food.Image" id="item_pic" alt="" style="width:100%; height:150px;">
                            <h5 class="card-title mt-2 mb-3" id="item_name">@food.Name</h5>
                            <p class="mb-2 mt-3 card-text">@food.Description</p>
                            <h3 class="mb-3 point text-center" style="margin-left:9px" id="item_price">₦@food.Price</h3>
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <button class="btn btn-outline-dark btn-lg btn-danger" onclick="addToCart('@food.Id')" style="width:70%;height:50px"><i style="color: white;font-size:23px" class="bi bi-cart-plus-fill"></i></button>
                            </div>
                            <div>
                              @*<a data-toggle="modal" data-target="#modals" class="btn btn-lg btn-danger" onclick="GetFood(@food.Id)" style="width:50%;margin-left:10px;border-radius:90px;height:50px">Buy</a>*@
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>
    }
    else
    {
        <p>No Food Exits</p>
    }
</div>



<!-- The Modal -->
<div class="modal fade mt-1" id="modals">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <!-- Modal Header -->
                     <div class="modal-header">
            <h4 class="modal-title">Modal Heading</h4>

            </div>

            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title mb-3 text-center mb-3" style="font-size:50px;font-family:monserrt;color:red">Order Now</h3>

                <div class="row">
                    <input id="foodId" class="form-control" hidden />
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>AccountName</label>
                            <input type="text" class="form-control" id="accountNameId" disabled />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="">FoodName</label>
                            <input type="text" id="foodName" class="form-control" required disabled />

                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-group">
                            <label>AccountNumber</label>
                            <input type="number" id="accountNumberId" class="form-control" disabled />
                        </div>
                    </div>



                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Amount</label>
                            <input type="number" id="amount" class="form-control" required disabled />
                        </div>
                    </div>


                     <div class="col-md-6">
                        <div class="form-group">
                            <label>Bank Name</label>
                            <input type="text" class="form-control" id="bankNameId" disabled />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Quantity</label>
                            <input type="number" class="form-control" id="quantity" onkeyup="Quantity()" required />
                        </div>
                    </div>

                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <a onclick="GetFoodById()" class="btn btn-lg btn-primary" style="margin-right:280px">Confirm Payment</a>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- The Modal -->
<div class="modal" id="evidenceModal">
    <div class="modal-dialog p-3 mt-5" style="max-width:45%">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header p-3 bg-danger">
                <h4 class="modal-title align-items-center  text-bold text-white" style="margin-left:150px"> Upload Evidence of Payment</h4>
                <button type="button" class="close text-dark" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="modal-body">
                    <div class="form-group">
                        <input class="form-control "  id="evidenceId" type="file" />
                        <a class="btn btn-lg btn-info mt-4" style="margin-left:270px" onclick="GetUploadedEvidence()">Submit</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 300px;
        margin: auto;
        text-align: center;
        font-family: arial;
        border: 2px black solid;
        margin-top: 20px;
        display: inline-block;
        transition: transform 0.3s;
    }

    .card-title {
        color: black;
        font-size: 35px;
    }

    .point {
        color: black;
        font-size: 25px;
    }

    .card:hover {
        transform: scale(1.1);
    }
</style>

<script>
    $(document).ready(function () {
        $('.card').hover(
            function () {
                $(this).animate({ opacity: 0.7 }, 'fast');
            },
            function () {
                $(this).animate({ opacity: 1 }, 'fast');
            }
        );
        continueShopping();
    });

</script>
